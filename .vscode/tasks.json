{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Compilar C",
		"type": "shell",
		"command": "gcc",
		"args": [
		  "-Wall",
		  "-Wextra",
		  "-Werror",
		  "-g",
		  "${file}",
		  "-o",
		  "${fileDirname}/${fileBasenameNoExtension}.exe"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Compila el archivo actual con GCC"
	  }
	]
  }